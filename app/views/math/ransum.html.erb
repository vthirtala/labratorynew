<h1>Random Sum Calculator</h1>

<form method='post' action='/math/ransum'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type='text' name='count' />
    <input type='text' name='range' />
    <input type='submit' name='Compute Sum' />
</form>

<% if @numbers %>
    <ul>
        <% @numbers.each do |n| %>
            <li><%= n %></li>
        <% end %>
    </ul>
    <%= @sum %>
<% end %>